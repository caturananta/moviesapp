<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginHorizontal="@dimen/len_16dp"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="@dimen/len_8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="EARTH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/rb_popular"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@android:color/darker_gray"
                    android:progressTint="@android:color/holo_orange_light" />

                <TextView
                    android:id="@+id/tv_type_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="EARTH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/blueaccent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_genre_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="EARTH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/blueaccent"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_popular"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/len_32dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp" />

        <ImageView
            android:layout_width="@dimen/len_32dp"
            android:layout_height="@dimen/len_32dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/len_16dp"
            android:layout_marginRight="@dimen/len_32dp"
            android:src="@drawable/crown"/>

        <TextView
            android:id="@+id/tv_rating_crown"
            android:layout_width="@dimen/len_32dp"
            android:layout_height="@dimen/len_32dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/len_24dp"
            android:layout_marginRight="@dimen/len_32dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="9.9"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="12sp" />
    </FrameLayout>
</LinearLayout>